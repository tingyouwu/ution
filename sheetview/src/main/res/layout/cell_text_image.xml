<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/cell_text_image_root"
    android:layout_width="100dp"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:padding="5dp"
        android:gravity="center">

        <TextView
            android:layout_centerVertical="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:textColor="@color/gray_font_1"
            android:maxLines="2"
            android:ellipsize="end"
            android:text="项目启动xxxxxxxxxxxxxxx"
            android:gravity="center"
            android:layout_marginLeft="5dp"
            android:id="@+id/cell_text_image_tv"/>

        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:id="@+id/cell_text_image_iv"
            android:src="@drawable/img_download_finish"
            android:visibility="gone"/>

    </LinearLayout>

    <View
        android:layout_alignParentRight="true"
        android:layout_width="0.5dp"
        android:layout_height="fill_parent"
        android:background="@color/list_line"/>

    <View
        android:layout_alignParentBottom="true"
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/list_line"/>

</RelativeLayout>
