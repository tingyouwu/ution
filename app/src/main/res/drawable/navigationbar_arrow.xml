<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="13%"
            android:pivotY="-40%" >
            <shape
                android:shape="rectangle" >
                <stroke android:color="@color/transparent" android:width="1dp"/>
                <solid
                    android:color="@color/blue_crm" />
            </shape>
        </rotate>
    </item>
</layer-list>