<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/let_layout_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white"
    android:focusableInTouchMode="true"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/let_layout_headview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/let_layout_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:minHeight="45dip" >

            <LinearLayout
                android:id="@+id/let_layout_label"
                android:layout_width="105dip"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dip"
                android:layout_marginTop="13dip"
                android:gravity="right"
                android:minWidth="70dip"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/let_required"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:gravity="center"
                    android:text="*"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/let_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dip"
                    android:ellipsize="end"
                    android:gravity="right"
                    android:maxWidth="90dip"
                    android:singleLine="true"
                    android:text="字名字名字名"
                    android:textColor="@color/gray_font_2"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/let_layout_multioption"
                android:layout_width="wrap_content"
                android:layout_height="35dip"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dip"
                android:gravity="center"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/let_multioption"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:src="@drawable/img_locationnav"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/let_multioption2"
                    android:layout_width="20dip"
                    android:layout_height="20dip"
                    android:layout_marginLeft="10dip"
                    android:src="@drawable/img_nav_down"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/let_loading"
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:layout_marginLeft="10dip"
                    android:visibility="gone" />

                <com.wty.ution.widget.CheckCodeButton
                    android:id="@+id/let_btn_checkcode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="gone" />
            </LinearLayout>

            <EditText
                android:id="@+id/let_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:layout_toLeftOf="@id/let_layout_multioption"
                android:layout_toRightOf="@id/let_layout_label"
                android:background="@drawable/sign_bg"
                android:ellipsize="end"
                android:gravity="top"
                android:hint="请输入名字"
                android:imeOptions="actionDone"
                android:maxWidth="100dip"
                android:minHeight="45dip"
                android:paddingBottom="8dip"
                android:paddingLeft="15dp"
                android:paddingTop="13dip"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textSize="14dip" />

            <ImageButton
                android:id="@+id/let_editclear"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="#00000000"
                android:layout_marginRight="3dip"
                android:layout_toLeftOf="@id/let_layout_multioption"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_del_search_normal"
                android:visibility="gone" />

            <TextView
                android:id="@+id/let_tv_content"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="3dip"
                android:layout_toLeftOf="@id/let_layout_multioption"
                android:layout_toRightOf="@id/let_layout_label"
                android:background="@drawable/sign_bg"
                android:ellipsize="end"
                android:gravity="left|center_vertical"
                android:maxWidth="100dip"
                android:minHeight="45dip"
                android:paddingBottom="5dip"
                android:paddingLeft="15dp"
                android:paddingRight="15dip"
                android:paddingTop="5dip"
                android:textColor="@color/black"
                android:textSize="14dip"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:id="@+id/let_underline"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:background="@color/list_line" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/let_layout_footview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
    </LinearLayout>

</LinearLayout>