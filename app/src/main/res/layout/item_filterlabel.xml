<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/flb_root"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/selector_white"
    android:focusableInTouchMode="true">

    <TextView
        android:id="@+id/flb_textview"
        android:layout_width="wrap_content"
        android:layout_height="45dip"
        android:layout_alignParentTop="true"
        android:paddingLeft="18dip"
        android:layout_marginRight="5dip"

        android:ellipsize="end"
        android:gravity="left|center_vertical"
        android:minWidth="80dip"
        android:singleLine="true"
        android:text="筛选11"
        android:textColor="@color/gray_font_2"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/flb_content_edt"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/flb_textview"
        android:layout_weight="1"
        android:background="@drawable/sign_bg"
        android:ellipsize="end"
        android:gravity="center_vertical|right"
        android:hint="请输入名字搜索"
        android:maxLength="20"
        android:minHeight="45dip"
        android:paddingBottom="8dip"
        android:paddingLeft="5dp"
        android:paddingRight="45dip"
        android:paddingTop="13dip"
        android:singleLine="true"
        android:textColor="@color/blue_crm"
        android:textColorHint="@color/gray_font_3"
        android:textCursorDrawable="@drawable/edt_cursor"
        android:textSize="14dip" />

    <RelativeLayout
        android:id="@+id/flb_layout_select"
        android:layout_width="fill_parent"
        android:layout_height="45dip"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dip"
        android:layout_toRightOf="@id/flb_textview"
        android:orientation="horizontal"
        android:visibility="gone" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dip"
            android:src="@drawable/img_nav" />

        <TextView
            android:id="@+id/flb_content_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="45dip"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="不限"
            android:textColor="@color/gray_font_3"
            android:textSize="14dip" />
    </RelativeLayout>

    <View
        android:layout_below="@id/flb_textview"
        android:layout_width="fill_parent"
        android:layout_height="0.5dip"
        android:background="@color/list_line" />

</RelativeLayout>